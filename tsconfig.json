{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "lib/types/*"],
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist", ".eslintrc.cjs"]
}
