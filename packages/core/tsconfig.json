{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "*": ["node_modules/*", "packages/core/lib/types/*"],
      "@/*": ["./"]
    },
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["lib/**/*", "examples/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
